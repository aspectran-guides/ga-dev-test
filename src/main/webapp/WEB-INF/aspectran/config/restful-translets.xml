<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 2.0//EN"
		"http://aspectran.github.io/dtd/aspectran-2.dtd">

<aspectran>

	<!-- 기본 설정 -->
	<settings>
		<setting name="transletNamePattern" value="/ga-dev-test/*"/>
	</settings>
	
	<translet name="echo/${msg}" method="GET">
		<transform type="transform/text" contentType="text/plain">
			<template>
				@{msg}
			</template>
		</transform>
	</translet>

	<translet name="customers" method="GET">
		<transform type="transform/text" contentType="text/plain">
			<template>
				전체 고객 목록을 조회합니다.
			</template>
		</transform>
	</translet>

	<translet name="customers" method="POST">
		<transform type="transform/text" contentType="text/plain">
			<template>
				고객정보를 등록합니다.
			</template>
		</transform>
	</translet>
	
	<translet name="customers/${id:anonymous}" method="GET">
		<transform type="transform/text" contentType="text/plain">
			<template>
				고객 ID가 "@{id}"인 고객의 상세정보를 조회합니다.
			</template>
		</transform>
	</translet>

	<translet name="customers/${id}/approval" method="PUT">
		<transform type="transform/text" contentType="text/plain">
			<template>
				고객 ID가 "@{id}"인 고객에 대해 승인처리를 합니다.
			</template>
		</transform>
	</translet>

	<translet name="customers/${id1}-${id2}/approval" method="GET">
		<transform type="transform/text" contentType="text/plain">
			<template>
				고객 ID가 "@{id1}-@{id2}"인 고객에 대한 승인여부를 조회합니다.
			</template>
		</transform>
	</translet>

	<translet name="customers/${id}" method="DELETE">
		<transform type="transform/text" contentType="text/plain">
			<template>
				고객 ID가 "@{id}"인 고객정보를 삭제합니다.
			</template>
		</transform>
	</translet>
	
</aspectran>
